<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1> Enter details about a tour</h1>
  <%= simple_form_for @tour do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>

<!-- For nested addresses -->
      <%= f.simple_fields_for :start_location do |address| %>
        <%= address.input :location, label: 'Street address, State, Country' %>
      <% end %>

      <%= f.simple_fields_for :finish_location do |address| %>
        <%= address.input :location, label: 'Street address, State, Country' %>
      <% end %>

<!-- Old tour.start_location fields removed -->
    <!-- <%= f.input :start_location, label: 'Start (Street, City, State, Country)' %>
    <%= f.input :finish_location, label: 'End  (Street, City, State, Country)' %> -->


    <%= f.input :difficulty, label: 'Novice, Intermediate, Advanced' %>
    <%= f.input :surface %>
    <%= f.input :distance %>

    <br />
    <%= f.submit 'Create', :class => 'pull-right btn btn-primary' %>
    <% end %>
</div>
