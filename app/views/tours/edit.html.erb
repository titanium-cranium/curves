<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1> Edit your Tour</h1>
  <%= simple_form_for @tour do |f| %>
    <%= f.input :name %> <br />
    <%= f.input :description %><br />
    <%= f.input :start_location %> <br />
    <%= f.input :finish_location %> <br />
    <%= f.input :state %> <br />
    <%= f.input :country %> <br />
    <%= f.input :difficulty %> <br />
    <%= f.input :surface %> <br />
    <%= f.input :distance %> <br />
    <br />

    <%= f.submit 'Update', :class => 'pull-right btn btn-primary' %>
    <% end %>
</div>
