<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1> Edit your Tour</h1>
  <%= simple_form_for @tour do |f| %>
    <%= f.input :name %> <br />
    <%= f.input :description %><br />

<!-- For nested addresses -->
  <%= f.simple_fields_for :start_location do |address| %>
    <%= address.input :location, label: 'Street address, State, Country' %>
  <% end %>

  <%= f.simple_fields_for :finish_location do |address| %>
    <%= address.input :location, label: 'Street address, State, Country' %>
  <% end %>

    <!-- <%= f.input :state %> <br />
    <%= f.input :country %> <br /> -->
    <%= f.input :difficulty %> <br />
    <%= f.input :surface %> <br />
    <%= f.input :distance %> <br />
    <br />

    <%= f.submit 'Update', :class => 'pull-right btn btn-primary' %>
    <% end %>
</div>
